<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.kwezal.kandy">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <activity
                android:name=".MainActivity"
                android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.VIEW" />
            </intent-filter>

        </activity>

        <activity
                android:name=".DialogsExampleActivity"
                android:label="@string/activity_label_dialogs" />

        <activity
                android:name=".ListViewsExampleActivity"
                android:label="@string/activity_label_list_views" />
        
        <activity
                android:name=".LogsExampleActivity"
                android:label="@string/activity_label_logs" />

    </application>
</manifest>
